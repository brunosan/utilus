<h1>Listing votes</h1>

<%= page_entries_info @votes %><%= will_paginate %>

<table>

<% @votes.each do |vote| %>
  <tr>
    <td>
    Voted <%= time_ago_in_words(vote.created_at) %>  ago.</br>
    </td>
    <td>
      <strong>Question:</strong> <%=link_to vote.answer.question.title, vote.answer.question %> (<%= pluralize(vote.answer.question.answers.count,"answer")%> total) </br>
      <strong>Answer:</strong> <%= vote.answer.text%> ( <%= pluralize(vote.answer.votes.count,"vote")%>/ <%= pluralize(vote.answer.flags.count,"flag")%> )</br>
    </td>
  </tr>
<% end %>
</table>

<br />


