<h1>Listing answers</h1>

<%= page_entries_info @answers %><%= will_paginate %>
<table>

<% @answers.each do |answer| %>
  <tr>
    <td><strong><%= answer.question.title %></strong>
    </br>
    <%=answer.text %> </br>[<%= time_ago_in_words(answer.updated_at) %> ago.] </td>

  <td> <%= link_to 'x', answer, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
<% end %>
</table>

<%= will_paginate %>
<br />

<%= link_to 'New Answer', new_answer_path %>
